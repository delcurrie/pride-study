<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>PRIDE</title>

	<link rel="stylesheet" type="text/css" href="../styles/app.css">
</head>

<body>
	<div class="intro welcome">
		<img src="../images/logo_welcome.png" class="logo">
		<h1>Welcome to The PRIDE Study!</h1>
		
		<div class="bottom">
			<a class="consent-link showConsentDocument" href="#">Read Consent Document</a>
			<a class="consent-link emailConsent" href="#">E-mail Consent Document</a>
			<div class="people">
				<img class="person" src="../images/pride-home-1-1.jpg">
				<img class="person" src="../images/pride-home-1-2.jpg">
				<img class="person" src="../images/pride-home-1-3.jpg">
				<img class="person" src="../images/pride-home-1-4.jpg">
				<img class="person" src="../images/pride-home-1-5.jpg">
				<img class="person" src="../images/pride-home-2-1.jpg">
				<img class="person" src="../images/pride-home-2-2.jpg">
				<img class="person" src="../images/pride-home-2-3.jpg">
				<img class="person" src="../images/pride-home-2-4.jpg">
				<img class="person" src="../images/pride-home-2-5.jpg">
			</div>
		</div>
	</div>

	<script src="../scripts/vendor/jquery/jquery-1.11.3.min.js"></script>
	<script src="../scripts/vendor/greensock/TweenMax.min.js"></script>
	<script src="../scripts/vendor/greensock/plugins/CSSPlugin.min.js"></script>
	<script src="../scripts/vendor/greensock/easing/EasePack.min.js"></script>
	<script src="../scripts/vendor/fastclick.js"></script>
	
	<!-- <script src="../scripts/app.js"></script> -->

	<script>
		var isInitialized = false;

		$(document).ready(function(){
			FastClick.attach(document.body);

			init();
		});
		
		// This gets called when 
		function init(){
			if(!isInitialized){
				TweenMax.fromTo('.logo', 1, {y:40, opacity:0, force3D:true}, {y:0, opacity:1, delay:0.25});
				TweenMax.fromTo('h1', 1, {y:40, opacity:0, force3D:true}, {y:0, opacity:1, delay:0.5});
				TweenMax.staggerFromTo('.person', 0.3, {y:20, opacity:0, force3D:true}, {y:0, opacity:1, delay:1}, 0.1);
				TweenMax.staggerFromTo('.consent-link', 0.3, {y:20, opacity:0, force3D:true}, {y:0, opacity:1, delay:1.5}, 0.1);
			}
			
			isInitialized = true;

			$('.showConsentDocument').on('click', function(){
				url = "pride://showConsentDocument";
				document.location.href = url;
			});

			$('.emailConsent').on('click', function(){
				url = "pride://emailConsent";
				document.location.href = url;
			});
		}

		
	</script>
</body>

</html>